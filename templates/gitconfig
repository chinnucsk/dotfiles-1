[core]
    editor = emacs
[user]
    name = AUTHORNAME
    email = AUTHOREMAIL
[alias]
    br = branch
    ci = commit
    co = checkout
    st = status -sb
    unstage = reset HEAD --
    last = log -1 HEAD
    update = !git fetch upstream && git merge upstream/master
    cpr = !git reset HEAD~1 && git stash save --keep-index && git stash drop
    count   = !git shortlog -sn
    lg = log --pretty=format:'%C(yellow)%h%C(reset) - %C(yellow)%d%Creset %s %C(green)%cd%C(reset), %C(blue)%an%C(reset)' --abbrev-commit
    h = "!f() { git lg --since=$1 --before=$2; }; f"
    graph = !git lg --graph
    unmerged = branch --no-merged
    overview = for-each-ref --sort=-committerdate \
               --format='%(authordate:relative) %09 %(refname) %09 %(objectname) %09 %(authorname) %09 %(subject)' \
               refs/heads/
    current = rev-parse --abbrev-ref HEAD
[color]
    diff = auto
    status = auto
    branch = auto
    ui = true
[remote "origin"]
    fetch = +refs/pull/*/head:refs/remotes/origin/pr/*
[diff "keynote"]
    binary = true
#   textconv = /Users/robertoaloi/Projects/keynote-to-text/keynote-to-text
